@model List<GetRolesViewModel>
@{
    ViewData["Title"] = "Rol Yönetimi";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-12 m-4">
            <a href="/Admin/Roles/CreateRole" class="btn btn-outline-info form-control">+Yeni Rol Oluştur</a>
        </div>
        <div class="col-12 m-4">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Rol Adı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Kullanıcıya Ata</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoleName</td>
                            <td> <a href="#" class="btn btn-outline-danger">Sil</a></td>
                            <td> <a href="#" class="btn btn-outline-warning">Güncelle</a></td>
                            <td> <a href="#" class="btn btn-outline-primary">Kullanıcıya Ata</a></td>
                        </tr>
                    }
                  
                </tbody>
            </table>
        </div>
    </div>
</div>
