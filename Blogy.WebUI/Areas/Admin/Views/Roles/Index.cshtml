@model List<GetRolesViewModel>
@{
    ViewData["Title"] = "Rol Yönetimi";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-12 my-3">
                <a href="/Admin/Roles/CreateRole" class="btn btn-outline-info form-control">+Yeni Rol Oluştur</a>
            </div>
            <div class="col-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Rol Adı</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                            <th>Kullanıcıya Ata</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RoleName</td>
                                <td> <a href="/Admin/Roles/DeleteRole/@item.RoleId" class="btn btn-outline-danger btn-sm">Sil</a></td>
                                <td> <a href="/Admin/Roles/UpdateRole/@item.RoleId" class="btn btn-outline-warning btn-sm">Güncelle</a></td>
                                <td> <a href="/Admin/Roles/UserList" class="btn btn-outline-primary btn-sm">Kullanıcıya Ata</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


