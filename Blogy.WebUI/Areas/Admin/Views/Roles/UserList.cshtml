@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-12 m-4">
                <h3>Kullanıcı Listesi</h3>
                <hr />
            </div>
            <div class="col-12 m-4">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Kullanıcı Adı</th>
                            <th>Mail Adresi</th>
                            <th>Rol Ata</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td> <a href="/Admin/Roles/AssingRoleToUser/@item.Id" class="btn btn-outline-primary">Rol Ata</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


