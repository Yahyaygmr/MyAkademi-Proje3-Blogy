@model List<Comment>
@{
    ViewData["Title"] = "Yorum listesi";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-body text-center">
        <h2>Yorum Listesi</h2>
        <hr />
        <div class="my-5">
            <div class="table-responsive table-hover">
                <table class="table">
                    <thead class="bg-light">
                        <tr>
                            <th>#</th>
                            <th>Blog</th>
                            <th>Yorum Tarihi</th>
                            <th>Durumu</th>
                            <th>Yorum</th>
                            <th>işlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Article.Title.Substring(0,10) ...</td>
                                <td>@item.CommentDate.ToString("dd MMM yyyy HH:mm")</td>
                                <td>@item.Status</td>
                                <td>@item.Content</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-danger">Sil</a>
                                    <a href="#" class="btn btn-sm btn-info">Düzenle</a>
                                    <a href="#" class="btn btn-sm btn-secondary">Detay</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

