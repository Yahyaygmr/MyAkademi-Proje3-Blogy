@model List<HelpAdmin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-body">
        <h2 class="text-center">Yazar Destek Talepleri</h2>
        <hr />
        <div class="my-5">
            <table class="table table-hover">
                <thead>
                    <tr class="bg-light">
                        <th>#</th>
                        <th>Yazar</th>
                        <th>Konu</th>
                        <th>Durumu</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.AppUser.UserName</td>
                            <td>@item.Subject</td>
                            @if (item.Status)
                            {
                                <td> <div class="badge badge-success"> Çözüldü </div></td>
                            }
                            else
                            {
                                <td> <div class="badge badge-danger"> Beklemede </div></td>
                            }
                            <td>
                                <a href="/Admin/HelpAdmin/HelpRequestDetail/@item.HelpAdminId" class="btn btn-secondary btn-sm">Detay</a>
                                @if (!(item.Status))
                                {
                                    <a href="/Admin/HelpAdmin/MarkAsSolved/@item.HelpAdminId" class="btn btn-warning btn-sm">Çözüldü Olarak İşaretle</a>
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

