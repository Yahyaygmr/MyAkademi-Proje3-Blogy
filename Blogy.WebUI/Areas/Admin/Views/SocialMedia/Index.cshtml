@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="card">
    <div class="card-body">
        <h2 class="text-center">Sosyal Medya Hesaplarım</h2>
        <hr />
        <div class="my-5">
            <div class="table-responsive table-hover">
                <table class="table">
                    <thead class="bg-light">
                        <tr>
                            <th>#</th>
                            <th>Hesap Adı</th>
                            <th>Yayında mı?</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.Status</td>
                                <td>
                                    <a href="/Admin/SocialMedia/EditAccount/@item.SocialMediaId" class="btn btn-sm btn-secondary">Güncelle</a>
                                    <a href="/Admin/SocialMedia/DeleteAccount/@item.SocialMediaId" class="btn btn-sm btn-danger">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <td> <a href="/Admin/SocialMedia/AddNewAccount" class="btn btn-primary">+ Yeni Hesap Ekle</a></td>
    </div>
</div>

