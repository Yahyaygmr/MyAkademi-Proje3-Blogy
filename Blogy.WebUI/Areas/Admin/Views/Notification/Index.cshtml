@model List<Notification>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-body">
        <h2 class="text-center">Yayınladığım Duyurular</h2>
        <hr />
        <div class="my-5">
            <table class="table table-hover">
                <thead>


                    <tr class="bg-light">
                        <th>#</th>
                        <th>Duyuru</th>
                        <th>Tarihi</th>
                        <th>Yayında mı?</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Content</td>
                            <td>@item.CreatedDate.ToString("dd MMM yyyy")</td>
                            <td>@item.Status</td>
                            <td>
                                <a href="/Admin/Notification/CreateNotification/" class="btn btn-danger btn-sm">Sil</a>
                                <a href="/Admin/Notification/CreateNotification/" class="btn btn-secondary btn-sm">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <div class="mt-3">
                <a href="/Admin/Notification/CreateNotification/" class="btn btn-outline-success">+ Yeni Duyuru Oluştur</a>
            </div>

        </div>
    </div>
</div>

