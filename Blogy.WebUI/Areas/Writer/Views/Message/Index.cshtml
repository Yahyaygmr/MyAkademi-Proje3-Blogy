@model List<WriterMessage>

@{
    ViewData["Title"] = "Message Index";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <div class="page-header">
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><span style="color:cornflowerblue">Kullanıcılar Arası Mesaj Sistemi </span></h4>
                    <p class="card-description">
                        Gelen Mesajlar
                    </p>
                    <table class="table table-hover">
                        <thead>
                            <tr class="bg-light">
                                <th>#</th>
                                <th>Konu</th>
                                <th>Gönderen Adı</th>
                                <th>Gönderen Mail</th>
                                <th>Tarih</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                if (item.IsRead)
                                {
                                    <tr>

                                        <td>@count</td>
                                        <td>
                                            <a href="/Writer/Message/WriterMessageDetail/@item.WriterMessageId" class="custom-link-read">@item.Subject</a>
                                        </td>
                                        <td>
                                            <a href="/Writer/Message/WriterMessageDetail/@item.WriterMessageId" class="custom-link-read">@item.AppUser.Name @item.AppUser.Surname</a>
                                        </td>
                                        <td>
                                            <a href="/Writer/Message/WriterMessageDetail/@item.WriterMessageId" class="custom-link-read"> @item.AppUser.Email</a>
                                        </td>
                                        <td>
                                            <a href="/Writer/Message/WriterMessageDetail/@item.WriterMessageId" class="custom-link-read">  @item.SendDate.ToString("dd MMM HH:mm")</a>
                                        </td>
                                        <td>
                                           @*  <a href="#" class="btn btn-secondary">Mesajı Oku</a> *@
                                            <a href="/Writer/Message/DeleteMessage/@item.WriterMessageId" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>

                                        <td>@count</td>
                                        <td>
                                            <a href="/Writer/Message/WriterMessageDetail/@item.WriterMessageId" class="custom-link">@item.Subject</a>
                                        </td>
                                        <td>
                                            <a href="/Writer/Message/WriterMessageDetail/@item.WriterMessageId" class="custom-link"> @item.AppUser.Name @item.AppUser.Surname</a>
                                        </td>
                                        <td>
                                            <a href="/Writer/Message/WriterMessageDetail/@item.WriterMessageId" class="custom-link"> @item.AppUser.Email</a>
                                        </td>
                                        <td>
                                            <a href="/Writer/Message/WriterMessageDetail/@item.WriterMessageId" class="custom-link">  @item.SendDate.ToString("dd MMM HH:mm")</a>
                                        </td>
                                        <td>
                                           @*  <a href="#" class="btn btn-secondary">Mesajı Oku</a> *@
                                            <a href="/Writer/Message/DeleteMessage/@item.WriterMessageId" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }

                            }

                        </tbody>
                    </table>
                </div>
                <span class="m-5"> <a href="/Writer/Message/SendMessage/" class="btn btn-primary">+ Yeni Mesaj Oluştur</a></span>
            </div>

        </div>

    </div>
</div>
