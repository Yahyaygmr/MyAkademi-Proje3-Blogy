@model List<HelpAdmin>
@{
    ViewData["Title"] = "HelpAdmin Index";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <div class="page-header">
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><span style="color:cornflowerblue">Sistemde yaşadığınız aksaklıklar ve taleplerinizi bu alandan sayfa adminine iletebilirsiniz. </span></h4>
                    <p class="card-description">
                        Aktif Taleplerim
                    </p>
                    <table class="table table-hover">
                        <thead>
                            <tr class="bg-light">
                                <th>#</th>
                                <th>Konu</th>
                                <th>Durumu</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Subject</td>
                                    @if (item.Status)
                                    {
                                        <td> <div class="badge badge-inverse-success"> Çözüldü </div></td>
                                    }
                                    else
                                    {
                                        <td> <div class="badge badge-inverse-warning"> Beklemede </div></td>
                                    }
                                    <td>
                                        <a href="/Writer/HelpAdmin/HelpRequestDetail/@item.HelpAdminId" class="btn btn-warning">Detay</a>
                                        <a href="/Writer/HelpAdmin/DeleteHelpRequest/@item.HelpAdminId" class="btn btn-danger">Talebi Sil</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <span class="m-5"> <a href="/Writer/HelpAdmin/CreateHelpRequest/" class="btn btn-primary">+ Yeni Talep Oluştur</a></span>
            </div>

        </div>

    </div>
</div>
