@model HelpAdmin
@{
    ViewData["Title"] = "CreateHelpRequest";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><span style="color:cornflowerblue">Sistemde yaşadığınız aksaklıklar ve taleplerinizi bu alandan sayfa adminine iletebilirsiniz. </span></h4>
                    <p class="card-description">
                        Yeni Talep Oluştur
                    </p>
                   <form method="post">
                       <div class="form-group mt-3">
                           <label>Konu</label>
                           <input type="text" class="form-control" asp-for="Subject"/>
                       </div>
                        <div class="form-group mt-3">
                            <label>Mesaj</label>
                           <textarea class="form-control" cols="7" rows="7" asp-for="Message"></textarea>
                        </div>
                        <div class="form-group mt-3">
                            <button class="btn btn-primary">Talep Oluştur</button>
                        </div>
                   </form>
                </div>
               
            </div>

        </div>

    </div>
</div>


