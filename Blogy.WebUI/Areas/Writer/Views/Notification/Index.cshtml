@model List<Notification>
@{
    ViewData["Title"] = "Notification Index";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <div class="page-header">
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><span style="color:cornflowerblue">Admin tarafından yayınlanan duyurular bu sayfada görüntülenir. </span></h4>
                    <p class="card-description">
                        Duyurular
                    </p>
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr class="bg-light">
                                <th>#</th>
                                <th>Duyuru</th>
                                <th>Tarihi</th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Content</td>
                                    <td>@item.CreatedDate.ToString("dd MMM yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>
</div>