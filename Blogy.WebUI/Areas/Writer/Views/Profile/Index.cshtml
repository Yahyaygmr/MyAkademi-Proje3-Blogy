@model UpdateWriterProfileViewModel
@{
    ViewData["Title"] = "ProfileIndex";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="card" style="width:100%;">
    <div class="card-body">
        <h1>Kullanıcı Profil Bilgilerini Güncelle</h1>
        <div class="row">
            <div class="col-8">
                <form method="post">
                    <div asp-validation-summary="All" class="col-12"></div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <p>Adı :</p>
                                <input type="text" class="form-control" placeholder="Adı" asp-for="Name" readonly>
                            </div>
                            <div class="col-6">
                                <p>Soyadı :</p>
                                <input type="text" class="form-control" placeholder="Soyadı" asp-for="Surname" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <p>Kullanıcı Adı :</p>
                                <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="UserName" readonly>
                            </div>
                            <div class="col-6">
                                <p>Mail :</p>
                                <input type="email" class="form-control" placeholder="Email" asp-for="Email" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <p>Yeni Şifre :</p>
                                <input type="password" class="form-control" placeholder="Şifre" asp-for="Password">
                            </div>
                            <div class="col-6">
                                <p>Şifre Tekrar :</p>
                                <input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="ConfirmPassword">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Profil Fotografını Değiştir</label>
                        <input type="text" class="form-control" placeholder="Fotoğraf Linki" asp-for="ImageUrl">
                     @*    <input type="file" class="form-control"/> *@
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary waves-effect waves-light m-1"><i class="fa fa-floppy-o mr-1"></i>Güncelle</button>
                    </div>
                </form>
            </div>
            <div class="col-4 d-flex justify-content-center align-items-center">
                @if(string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="~/images/randomuser.jpg" class="img-fluid" alt="Random User Image" />
                }
                else
                {
                    <img src="@Model.ImageUrl" class="img-fluid" alt="User Image" />
                }
            </div>
        </div>
      
    </div>
</div>


