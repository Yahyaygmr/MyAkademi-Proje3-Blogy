@model Article
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        @*   <h3 class="page-title">@ViewBag.id Blogları</h3> *@
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tables</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Basic tables </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Blog Ekleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki alanları eksiksiz doldurarak blog ekleme işlemini tamamlayabilirsiniz.
                    </p>
                   <form method="post">
                       <div class="form-group mt-3">
                            <label>Blog Başlığı</label>
                            <input asp-for="Title" class="form-control"/>
                       </div>
                        <div class="form-group mt-3">
                            <label>Kategori</label>
                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
                        </div>
                        <div class="form-group mt-3">
                            <label> Kapak Fotoğrafı Yolu</label>
                            <input asp-for="CoverImageUrl" class="form-control" />
                        </div>
                        <div class="form-group mt-3">
                            <label>Detay</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        </div>
                        <div class="form-group mt-3">
                           <button class="btn btn-info">Kaydet</button>
                        </div>

                       
                   </form>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
