@model List<Article>
@{
    ViewData["Title"] = "MyBlogListAsync";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <div class="page-header">
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><span style="color:cornflowerblue">HOŞGELDİNİZ </span>  <span style="text-decoration:underline; font-size:22px;"> @ViewBag.id</span></h4>
                    <p class="card-description">
                       Aşşağıdaki tablodan size ait olan blogları görüntüleyebilir, üzerlerinde işlemler yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Blog Başlığı</th>
                                    <th>Tarih</th>
                                    <th>Kategori</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Blog Yorumları</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title.Substring(0,10) ...</td>
                                        <td>@item.CreatedDate.ToString("dd MMM yyyy")</td>
                                        <td>@item.Category.Name</td>
                                        <td><a href="/Writer/Blog/DeleteBlog/@item.ArticleId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Writer/Blog/UpdateBlog/@item.ArticleId" class="btn btn-info">Güncelle</a></td>
                                        <td><a href="/Writer/Blog/BlogComments/@item.ArticleId" class="btn btn-warning">Blog Yorumları</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
         
                    </div>
                    
                </div>
                <span class="m-5"> <a href="/Writer/Blog/CreateBlog/" class="btn btn-primary">Yeni Blog Girişi</a></span>
                   
            </div>

        </div>

    </div>
</div>


