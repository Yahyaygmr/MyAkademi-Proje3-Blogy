@using Blogy.EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <h1>CategoryList</h1>
    <hr />

    <table class="table table-hover">
        <tr class="bg-light">
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Kategoriye Ait Bloglar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.Name</td>
                <td><a href="/Category/RemoveCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle</a></td>
                <td><a href="#" class="btn btn-secondary">Bloglar</a></td>
            </tr>
        }
    </table>
    <a href="/Category/CreateCategory/" class="btn btn-outline-success">+ Yeni Kategori</a>
</div>



