@model List<Article>
<footer class="site-footer">
	<div class="container">
		<div class="row">
			<div class="col-lg-4">
				<div class="widget">
					<h3 class="mb-4">Hakkımızda</h3>
					<p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
				</div> <!-- /.widget -->
				<div class="widget">
					<h3>Sosyal Medya</h3>
					<ul class="list-unstyled social">
						<li><a href="#"><span class="icon-instagram"></span></a></li>
						<li><a href="#"><span class="icon-twitter"></span></a></li>
						<li><a href="#"><span class="icon-facebook"></span></a></li>
						<li><a href="#"><span class="icon-linkedin"></span></a></li>
						<li><a href="#"><span class="icon-pinterest"></span></a></li>
						<li><a href="#"><span class="icon-dribbble"></span></a></li>
					</ul>
				</div> <!-- /.widget -->
			</div> <!-- /.col-lg-4 -->
			<div class="col-lg-4 ps-lg-5">
				<div class="widget">
					<h3 class="mb-4">Şirketimiz</h3>
					<ul class="list-unstyled float-start links">
						<li><a href="#">Hakkımızda</a></li>
						<li><a href="#">Hizmetlerimiz</a></li>
						<li><a href="#">Vizyonumuz</a></li>
						<li><a href="#">Misyonumuz</a></li>
						<li><a href="#">Şartlar Kurallar</a></li>
						<li><a href="#">Güvenlik</a></li>
					</ul>
					<ul class="list-unstyled float-start links">
						<li><a href="#">Partnerlerimiz</a></li>
						<li><a href="#">Reklam</a></li>
						<li><a href="#">Kariyer</a></li>
						<li><a href="#">Bloglar</a></li>
						<li><a href="#">Sıkça Sorulanlar</a></li>
						<li><a href="#">Giriş Yap</a></li>
					</ul>
				</div> <!-- /.widget -->
			</div> <!-- /.col-lg-4 -->
			<div class="col-lg-4">
				<div class="widget">
					<h3 class="mb-4">Son 3 Blog</h3>
					<div class="post-entry-footer">
						<ul>
							@foreach (var item in Model)
							{
								<li>
									<a href="">
										<img src="@item.CoverImageUrl" alt="Image placeholder" class="me-4 rounded">
										<div class="text">
											<h4>@item.Title</h4>
											<div class="post-meta">
												<span class="mr-2">@item.CreatedDate.ToString("dd MMM yyyy") </span>
											</div>
										</div>
									</a>
								</li>
							}
							
						</ul>
					</div>


				</div> <!-- /.widget -->
			</div> <!-- /.col-lg-4 -->
		</div> <!-- /.row -->

		<div class="row mt-5">
			<div class="col-12 text-center">

				<p>
					Copyright &copy;@DateTime.Now.Year Tüm Hakları Saklıdır. &mdash; Designed with love by <a href="https://untree.co">Untree.co</a>  Distributed by <a href="https://themewagon.com">ThemeWagon</a>
				</p>
			</div>
		</div>
	</div> <!-- /.container -->
</footer>