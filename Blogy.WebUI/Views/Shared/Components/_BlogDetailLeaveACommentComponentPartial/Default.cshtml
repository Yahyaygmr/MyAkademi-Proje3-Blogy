@model Comment

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yap</h3>
    <form method="post" asp-action="LeaveAComment" asp-route-id="@ViewBag.blogId" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Adınız *</label>
            <input type="text" asp-for="NameSurname" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="email">Mail Adresiniz *</label>
            <input type="email" asp-for="Email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea id="message" cols="30" rows="10" asp-for="Content" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Yorum Yap</button>
        </div>

    </form>
</div>