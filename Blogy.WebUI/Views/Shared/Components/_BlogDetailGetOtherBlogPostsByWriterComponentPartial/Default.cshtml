@model List<Article>

<h3 class="heading">Yazarın Diğer Blogları</h3>
<div class="post-entry-sidebar">
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <a href="/Blog/BlogDetail/@item.ArticleId">
                    <img src="@item.CoverImageUrl" alt="Image placeholder" class="me-4 rounded">
                    <div class="text">
                        <h4>@item.Title</h4>
                        <div class="post-meta">
                            <span class="mr-2">@item.CreatedDate.ToString("dd MMM yyyy") </span>
                        </div>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>
